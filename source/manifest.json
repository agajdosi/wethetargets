{
	"name": "We the Targets",
	"version": "0.0.1",
	"description": "Extension to gather ads and other targeted messages and share them into collective database for further analysis.",
	"homepage_url": "https://github.com/wethetargets/wethetargets",
	"manifest_version": 2,
	"minimum_chrome_version": "80",
	"applications": {
		"gecko": {
			"id": "platform-reverse-psychology@gajdosik.org",
			"strict_min_version": "80.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
		}
  },
	"options_ui": {
		"browser_style": true,
		"page": "preferences/preferences.html"
	},
	"permissions": [
		"storage",
		"tabs",
		"<all_urls>"
	],
	"content_scripts": [
		{
			"matches": [ "*://www.google.com/", "*://www.google.com/search*" ],
			"js": [ "google/content-script.js" ],
			"run_at": "document_end"
		},
		{
			"matches": [ "*://www.facebook.com/", "*://www.facebook.com/*" ],
			"js": [ "facebook/content.js" ],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": [ "background/bg.js" ],
		"persistent": false
	}
}
